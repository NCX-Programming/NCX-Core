        <Label x:Name="label1" Content="" HorizontalAlignment="Left" Margin="125,164,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn4" Content="Update" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Height="22" Width="110" Visibility="Hidden" Click="btn4_Click"/>
        <Label x:Name="label2" Content="Preparing uninstallation..." HorizontalAlignment="Left" Margin="0,164,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Visibility="Hidden"/>
    </Grid>
</Window>
