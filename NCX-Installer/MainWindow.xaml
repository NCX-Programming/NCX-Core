        <Button x:Name="btn3" Content="Show All" HorizontalAlignment="Left" Margin="12,122,0,0" VerticalAlignment="Top" Height="82" Width="82" FontSize="16" FontWeight="Bold" Background="{x:Null}" Click="Button_Click_3" Foreground="White"/>
