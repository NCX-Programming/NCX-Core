<Page x:Class="NCX_Installer.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NCX_Installer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Error" Background="Black">

    <Grid>
        <Label Content="An Error Has Occurred" HorizontalAlignment="Left" Margin="5,41,0,0" VerticalAlignment="Top" Foreground="#FF707070" FontSize="48" FontWeight="Bold"/>
        <Label x:Name="errCodeLbl" Content="Error Code: 00 (Unhandled Error)" HorizontalAlignment="Left" Margin="3,94,0,0" VerticalAlignment="Top" Foreground="#FF707070" FontSize="28"/>
        <TextBlock x:Name="errText" HorizontalAlignment="Left" Text="We apologize for the inconvenience. Please exit and relaunch NCX-Core. If this error has occurred more than once, please open an issue on our GitHub Repository."  TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF707070" FontSize="24" Width="700" Margin="10,155,0,0"/>
        <TextBlock x:Name="errDesc" HorizontalAlignment="Left" Margin="10,273,0,0" Text="Other error information."  TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF707070" FontSize="24" Width="700"/>

    </Grid>
</Page>
