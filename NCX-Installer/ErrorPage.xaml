<Page x:Class="NCX_Installer.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NCX_Installer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Error" Background="Black">

    <Grid>
        <Label Content="An Error Has Occurred" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Foreground="#FF707070" FontSize="48" FontWeight="Bold"/>
        <Label x:Name="label1" Content="Error Code: 00 (Unhandled Error)" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Foreground="#FF707070" FontSize="24"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,193,0,0" Text="We apologize for the inconvience. Please exit and relaunch NCX-Core. If this error has occurred more than once, please open an issue on our GitHub Repository."  TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF707070" FontSize="24" Width="736" TextAlignment="Center"/>

    </Grid>
</Page>
